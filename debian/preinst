#!/bin/bash

set -e

package_name=nexus

APP_PATH="/usr/local/${package_name}"
APP_USER=${package_name}

case "$1" in

install|upgrade)

  adduser --home "$APP_PATH" --system $APP_USER --group --quiet

  ;;

abort-upgrade)

  ;;

*)

  echo "preinst called with unknown argument \`$1'" >&2
  exit 1

  ;;

esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts, for example dh_installinit.

#DEBHELPER#

exit 0
